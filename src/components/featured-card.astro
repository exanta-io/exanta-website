---
const { site } = Astro.props;
// const widths = [450, 800];
// const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<div id="featured-post" class="border border-default bg-slate-800 pb-4 hover:scale-105 transition">
<a href={site.url}>
  <div class="flex h-full flex-col">
    <img src={site.frontmatter.image.url} alt={site.frontmatter.image.alt} class="aspect-video max-h-52 mx-0 px-0 mix-blend-luminosity" />
    <h3 class="text-start text-slate-200 font-extrabold text-xl py-4 px-8">
      {site.frontmatter.title}
    </h3>
    <p class="text-sm text-offset py-4 text-justify px-8">{site.frontmatter.description}</p>
    <p class="text-xs text-blue-400 text-start px-8 pb-2">{site.frontmatter.pubDate.slice(0,10)} | {site.frontmatter.author}</p>
    <!-- <a href={site.url} class="border border-current px-2 py-1 text-xs">Read more...</a> -->
  </div>
  </a>
</div>