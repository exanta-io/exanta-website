---
import { ClientRouter } from "astro:transitions";
import "@fontsource-variable/inter";
import { Image } from "astro:assets";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import "~/styles/index.css";
import { fade } from "astro:transitions";
import "aos/dist/aos.css";

import heroRight from "~/assets/ecogazer_graphics_hero.png";
import heroMobile from "~/assets/ecogazer_graphics_hero.png";
import screen1 from "~/assets/ecogazer_screen_01.webp";
import screen2 from "~/assets/ecogazer_screen_02.webp";
import screen3 from "~/assets/ecogazer_screen_03.webp";
import screen4 from "~/assets/ecogazer_screen_04.webp";

const { generator, site } = Astro;
const title = "Exanta P.C. - AI-driven energy analytics for tenants";
const image = new URL("social.jpg", site);
const pageTitle = "exanta - EcoGazer";
const description = "Exanta P.C. - AI-driven energy analytics for tenants";
---

<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <ClientRouter />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <!-- plausible code -->
    <script
      defer
      data-domain="exanta.io"
      src="https://analytics.csd.auth.gr/js/script.js"></script>

    <!-- social media -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Animate on scroll library  -->
    <script>
      import AOS from "aos";
      AOS.init();
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-slate-950 text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <div>
      <div class="bg-gradient-to-b from-slate-950 to-slate-800 mt-32">
        <!-- hero section -->
        <section
          id="ecogazer-hero"
          class="hidden lg:flex scroll-mt-24 items-center justify-around gap-4 space-y-8 h-fit 2xl:mx-auto"
        >
          <div
            class="flex flex-row items-center justify-between space-y-0 gap-x-32 space-x-8"
          >
            <div class="flex-1 flex-col items-center gap-4 ps-32">
              <slot name="eyebrow" />
              <h1
                class="text-[#03A4FF] text-left font-extrabold tracking-tight text-8xl"
              >
                EcoGazer
              </h1>
              <p class="max-w-3xl text-left font-extrabold text-2xl">
                <slot name="lead" />
                <span class="text-[#94A3B8]"
                  >AI-driven energy analytics<br />for tenants</span
                ><slot />
              </p>
            </div>
            <div
              data-aos="fade-left"
              data-aos-duration="1500"
              class="flex-0 text-left"
            >
              <Image
                transition:animate={fade({ duration: "1.4s" })}
                slot="eyebrow"
                src={heroRight}
                alt="ecogazer image"
                class="max-w-screen-sm"
              />
            </div>
          </div>
        </section>
        <!-- hero section mobile screens -->
        <section
          id="ecogazer-hero-mob"
          class="lg:hidden scroll-mt-24 items-center flex-col gap-4 space-y-8 h-fit px-8"
        >
          <div class="flex flex-col items-center space-y-8">
            <div>
              <div class="flex-1 flex-col items-center gap-4">
                <slot name="eyebrow" />
                <h1
                  class="text-[#03A4FF] text-center font-extrabold tracking-tight text-8xl max-w-[600px]"
                >
                  EcoGazer
                </h1>
              </div>
              <p class="max-w-3xl text-center font-extrabold text-2xl">
                <slot name="lead" />
                <span class="text-[#94A3B8]"
                  >AI-driven energy analytics<br />for tenants</span
                ><slot />
              </p>
            </div>
            <div
              data-aos="fade-down"
              data-aos-duration="1500"
              class="flex-1 text-center"
            >
              <Image
                transition:animate={fade({ duration: "1.4s" })}
                slot="eyebrow"
                src={heroMobile}
                alt="ecogazer image"
                class="max-w-96"
              />
            </div>
          </div>
        </section>
        <!-- intro and features section -->
        <section
          class="container px-8 lg:px-2 py-8 flex flex-col lg:flex-row scroll-mt-24 justify-around gap-4 h-fit mx-auto max-w-5xl"
        >
          <div class="flex-0">
            <h2 class="text-gray-100 text-center font-extrabold text-2xl">
              The challenges
            </h2>
            <ul class="challenges-list py-4">
              <li class="text-left text-sm text-[#94A3B8] py-2">
                Tenants have limited or no access to their energy data energy
                (real-time and historical) making it difficult to understand and
                manage their energy consumption effectively
              </li>
              <li class="text-left text-sm text-[#94A3B8] py-2">
                Tenants often lack motivation to engage with energy-saving
                initiatives
              </li>
              <li class="text-left text-sm text-[#94A3B8] py-2">
                Building owners have access to a wealth of energy data, which is
                underutilized
              </li>
            </ul>
          </div>
          <div class="flex-0">
            <h2 class="text-gray-100 text-center font-extrabold text-2xl">
              Ecogazer
            </h2>
            <ul class="ecogazer-list py-4">
              <li class="text-left text-sm text-[#94A3B8] py-2">
                Ecogazer is an AI-powered application designed to transform the
                way tenants manage, understand, and reduce their energy
                consumption
              </li>
              <li class="text-left text-sm text-[#94A3B8] py-2">
                EcoGazer empowers building occupants with real-time data,
                actionable insights, and interactive tools to drive energy
                efficiency and sustainability
              </li>
            </ul>
          </div>
        </section>
        <section class="px-8 lg:px-2">
          <div class="container max-w-5xl mx-auto py-10">
            <h2 class="text-gray-100 text-center font-extrabold text-2xl">
              How it works?
            </h2>
            <!-- how it works features -->
            <div
              class="container max-w-5xl mx-auto lg:flex lg:flex-row flex-col pt-10"
            >
              <div class="flex-1 text-center px-5 mx-auto py-4 lg:py-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="48"
                  height="48"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="#ffffff"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-database-zap mx-auto"
                  ><ellipse cx="12" cy="5" rx="9" ry="3"></ellipse><path
                    d="M3 5V19A9 3 0 0 0 15 21.84"></path><path d="M21 5V8"
                  ></path><path d="M21 12L18 17H22L19 22"></path><path
                    d="M3 12A9 3 0 0 0 14.59 14.87"></path></svg
                >
                <div class="inline-block lg:block ps-5">
                  <h3
                    class="text-[#F16922] py-2 font-bold text-xl lg:text-center"
                  >
                    Plug-in
                  </h3>
                  <p class="text-sm text-[#94A3B8] lg:text-center">
                    your energy data (consuming your energy provider API e.g.
                    BuildingX)
                  </p>
                </div>
              </div>
              <div
                class="flex-1 flex-col text-center gap-4 px-5 mx-auto py-4 lg:py-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="48"
                  height="48"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="#ffffff"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-brain-circuit mx-auto"
                  ><path
                    d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"
                  ></path><path d="M9 13a4.5 4.5 0 0 0 3-4"></path><path
                    d="M6.003 5.125A3 3 0 0 0 6.401 6.5"></path><path
                    d="M3.477 10.896a4 4 0 0 1 .585-.396"></path><path
                    d="M6 18a4 4 0 0 1-1.967-.516"></path><path d="M12 13h4"
                  ></path><path d="M12 18h6a2 2 0 0 1 2 2v1"></path><path
                    d="M12 8h8"></path><path d="M16 8V5a2 2 0 0 1 2-2"
                  ></path><circle cx="16" cy="13" r=".5"></circle><circle
                    cx="18"
                    cy="3"
                    r=".5"></circle><circle cx="20" cy="21" r=".5"
                  ></circle><circle cx="20" cy="8" r=".5"></circle></svg
                >
                <div class="inline-block lg:block ps-5">
                  <h3
                    class="text-[#F16922] py-2 font-bold text-xl lg:text-center"
                  >
                    Switch on
                  </h3>
                  <p class="text-sm text-[#94A3B8] text-center">
                    our AI algorithms & analytics modules for recommendations,
                    forecasting, gamification etc.
                  </p>
                </div>
              </div>
              <div
                class="flex-1 flex-col text-center gap-4 px-5 mx-auto py-4 lg:py-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="48"
                  height="48"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="#ffffff"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-bot-message-square mx-auto"
                  ><path d="M12 6V2H8"></path><path
                    d="m8 18-4 4V8a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2Z"
                  ></path><path d="M2 12h2"></path><path d="M9 11v2"
                  ></path><path d="M15 11v2"></path><path d="M20 12h2"
                  ></path></svg
                >
                <div class="inline-block lg:block ps-5">
                  <h3
                    class="text-[#F16922] py-2 font-bold text-xl lg:text-center"
                  >
                    Illuminate
                  </h3>
                  <p class="text-sm text-[#94A3B8] text-center">
                    your energy consumption & optimize it by chatting with our
                    AI-agent
                  </p>
                </div>
              </div>
              <!-- <div class="flex-1 px-5 mx-auto pt-12 lg:pt-32"> -->
            </div>
          </div>
        </section>
        <!-- core features section -->
        <div
          class="-mt-5 lg:-mt-12 relative w-full h-32 lg:h-96 bg-white mx-auto my-0"
          style="top: 1px; clip-path: polygon(100% 0%, 100% 100%, 0 100%)"
        >
        </div>
        <section class="bg-white py-12 pb-44 px-8">
          <div
            class="pt-12 px-6 lg:px-20 container bg-slate-950 mx-auto max-w-5xl"
          >
            <div class="container flex mx-auto lg:flex-row flex-col">
              <div class="flex-col flex-0 lg:w-3/6 text-left">
                <h3 class="text-[#F16922] font-bold text-lg">
                  Dynamic energy consumption visualizations
                </h3>
                <p class="text-sm text-[#94A3B8]">
                  Easily track your energy usage through intuitive and
                  interactive visual dashboards, designed to help you see the
                  patterns in your consumption
                </p>
              </div>
              <div
                data-aos="fade-left"
                class="flex-1 lg:justify-items-end justify-items-center pt-4 lg:pt-0 lg:-mt-36"
              >
                <Image
                  transition:animate={fade({ duration: "1.4s" })}
                  slot="eyebrow"
                  src={screen1}
                  alt="energy consumption visualizations screens"
                  class="w-[12rem] lg:w-[16rem]"
                />
              </div>
            </div>
            <div
              class="container flex mx-auto lg:flex-row flex-col-reverse mt-24"
            >
              <div
                data-aos="fade-right"
                class="flex-1 lg:justify-items-start justify-items-center pt-4 lg:pt-0 lg:-mt-36"
              >
                <Image
                  transition:animate={fade({ duration: "1.4s" })}
                  slot="eyebrow"
                  src={screen2}
                  alt="gamification screens"
                  class="w-[12rem] lg:w-[16rem]"
                />
              </div>
              <div class="flex-col flex-0 lg:w-3/6 text-left">
                <h3 class="text-[#F16922] font-bold text-lg">Gamification</h3>
                <p class="text-sm text-[#94A3B8]">
                  Participate in the “energy challenge”, set your goals, compare
                  your energy consumption with others, get reward achievements,
                  ... and save energy
                </p>
              </div>
            </div>
            <div class="container flex mx-auto lg:flex-row flex-col mt-24">
              <div class="flex-col flex-0 lg:w-3/6 text-left">
                <h3 class="text-[#F16922] font-bold text-lg">
                  Energy forecasting
                </h3>
                <p class="text-sm text-[#94A3B8]">
                  State-of-the-art algorithms provide you with accurate
                  predictions of future energy consumption, helping you plan and
                  adjust accordingly
                </p>
              </div>
              <div
                data-aos="fade-left"
                class="flex-1 lg:justify-items-end justify-items-center pt-4 lg:pt-0 lg:-mt-36"
              >
                <Image
                  transition:animate={fade({ duration: "1.4s" })}
                  slot="eyebrow"
                  src={screen3}
                  alt="energy forecasting screens"
                  class="w-[12rem] lg:w-[16rem]"
                />
              </div>
            </div>
            <div
              class="container flex mx-auto lg:flex-row flex-col-reverse mt-24"
            >
              <div
                data-aos="fade-right"
                class="flex-1 lg:justify-items-start justify-items-center pt-4 lg:pt-0 lg:-mt-36"
              >
                <Image
                  transition:animate={fade({ duration: "1.4s" })}
                  slot="eyebrow"
                  src={screen4}
                  alt="AI-agent chat screens"
                  class="w-[12rem] lg:w-[16rem]"
                />
              </div>
              <div class="flex-col flex-0 lg:w-3/6 text-left">
                <h3 class="text-[#F16922] font-bold text-lg">
                  Personalized recommendations
                </h3>
                <p class="text-sm text-[#94A3B8]">
                  Receive AI-driven, tailored suggestions on how to optimize
                  your energy usage based on your unique consumption patterns
                </p>
              </div>
            </div>
          </div>
          <div
            class="container pt-40 text-center max-w-5xl mx-auto bg-white -mt-24"
          >
            <h2 class="text-[#F16922] font-bold text-2xl">
              Meet the EnergyBuddy:<br />Your energy AI assistant
            </h2>
            <p class="text-sm text-[#94A3B8] pt-4">
              Have a conversation with your data! Our chatbot, powered by LLMs,
              can provide energy insights, answer questions, and guide you
              towards achieving sustainability goals.
            </p>
            <a href="https://energybuddy.exanta.app/" target="_blank"
              ><button
                class="flex mx-auto mt-12 items-center justify-center gap-3 border-2 border-slate-950 text-slate-950 hover:bg-slate-950 px-6 py-4 hover:text-[#FFFFFF]"
              >
                Visit Demo
              </button></a
            >
          </div>
        </section>
      </div>
    </div>
    <Footer />
    <style>
      .challenges-list li {
        list-style: none;
        padding: 10px 0px 10px 50px;
        background-image: url(data:image/svg+xml;base64,);
        background-repeat: no-repeat;
        background-position: left calc(0% + 10px);
        background-size: 30px;
      }
      .ecogazer-list li {
        list-style: none;
        padding: 10px 0px 10px 50px;
        background-image: url(data:image/svg+xml;base64,);
        background-repeat: no-repeat;
        background-position: left calc(0% + 10px);
        background-size: 30px;
      }
    </style>
  </body>
</html>
