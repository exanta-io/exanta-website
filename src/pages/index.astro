---
import { ViewTransitions } from 'astro:transitions';
import { fade } from 'astro:transitions';
import "@fontsource-variable/inter";
import Partners from "~/components/partners.astro";
import Services from "~/components/services.astro";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Intro from "~/components/intro.astro";
// import FeaturedNews from "~/components/featured-news.astro";
import Splash from "~/components/splash.astro";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
// const newsPosts = await Astro.glob("../pages/news/*.md");
const pageTitle = "exanta | Data Science Technologies"
const description =
  "Exanta P.C. illuminates the entire pipeline from processing source data to gaining insights and discovering inherent and non-obvious knowledge.";
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <!-- plausible code -->
    <script defer data-domain="exanta.io" src="https://analytics.csd.auth.gr/js/script.js"></script>

    <!-- social media -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-slate-950 text-default text-base selection:bg-secondary selection:text-white"
  >
      <Header />
      <Splash />
      <div class="space-y-24 px-8 py-32 bg-gradient-to-b from-slate-950 to-slate-800"
      transition:animate={fade({ duration: '2.0s' })}>
        <Intro />
        <Services />
        <Partners />
        <!-- <FeaturedNews title="Featured News" id="featured-news" lead="Check out exanta's recent news" arrayToMap={newsPosts.slice(0,3)} /> -->
      </div>
      <Footer />
  </body>
</html>