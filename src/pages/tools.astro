---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/inter";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import ContentSection from "~/components/content-section.astro";
import "~/styles/index.css";
import TagFilter from "~/components/TagFilter.astro";
// import { Image } from "astro:assets";
// import { Debug } from "astro:components";
import toolsList from "~/data/tools"; // load tools list from data

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Exanta P.C. illuminates the entire pipeline from processing source data to gaining insights and discovering inherent and non-obvious knowledge.";
const pageTitle = "exanta - Tools";

---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <!-- plausible code -->
    <script
      defer
      data-domain="exanta.io"
      src="https://analytics.csd.auth.gr/js/script.js"></script>

    <!-- social media -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-slate-950 text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <div
      class="space-y-24 px-8 py-32 bg-gradient-to-b from-slate-950 to-slate-800"
    >
      <ContentSection title="Tools" id="tools">
        <Fragment slot="lead">Meet our tools</Fragment>
        <p
          class="text-md max-w-3xl text-slate-400 place-self-center text-center"
        >
        </p>
        <TagFilter client:load tools={toolsList} />
      </ContentSection>
    </div>
    <Footer />
  </body>
</html>
